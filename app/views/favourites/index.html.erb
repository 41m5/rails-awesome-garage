<h1>MY GARAGE</h1>

<ul>
  <% @favourites.each do |favourite| %>
    <li>
      <div class="card-favourite">
        <%= image_tag(favourite.car.image_url) %>
          <div class="card-favourite-infos">
              <%= favourite.car.brand %> - <%= favourite.car.model %>
              <%= favourite.car.year %> | <%= favourite.car.fuel %>
              <%= link_to car_favourite_path(favourite.car, favourite),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "btn btn-delete" do %>
                <i class="fa-solid fa-trash"></i>
              <% end %>
        </div>
      </div>
   </li>
  <% end %>
</ul>
