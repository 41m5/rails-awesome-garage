

  <div class="card-car">
     <div class="card-car-image">
        <%= image_tag(@car.image_url, alt: "#{@car.brand} #{@car.model}") if @car.image_url.present? %>
      </div>
    <div class="card-car-infos">
      <h1><%= "#{@car.brand}" %>
      <p><%= "#{@car.model} | (#{@car.year})" %>
      <%= simple_form_for [@car, @favourite] do |f| %>
      <%= f.submit "Add to garage", class: "btn btn-success" %>
      <% end %>
    </div>
     <div class="form">
        <h3>Leave a comment</h3>
          <%= simple_form_for [@car, @review] do |f| %>
            <%= f.input :comment %>
            <%= f.input :rating, input_html: { type: 'range', min: 0, max: 5, step: 1 }, label: "Rating (0 to 5)" %>
            <%= f.submit "Submit", class: "btn btn-success" %>
          <% end %>
      <h3>Comments</h3>
        <ul>
          <% @reviews.each do |review| %>
          <li>"<%= review.comment %>" | <%= rating_to_stars(review.rating) %></li>
            <% end %>
        </ul>
    </div>
  </div>



